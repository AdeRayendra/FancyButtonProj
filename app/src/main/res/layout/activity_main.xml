<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fnBtn="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ekalips.fancybuttonproj.MainActivity">

    <com.ekalips.fancybuttonproj.FancyButton
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/btn1"
        fnBtn:text="Button"
        fnBtn:capsText="true"
        fnBtn:textColor="#fff"
        fnBtn:btnStyle="stroke_fill"
        fnBtn:fillColor="@android:color/holo_green_light"
        fnBtn:strokeColor="@android:color/holo_red_light"
        fnBtn:progressColor="#000"
        fnBtn:hideFillAfterCollapse="false"/>

    <com.ekalips.fancybuttonproj.FancyButton
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="60dp"
        android:id="@+id/btn2"
        fnBtn:text="Button"
        fnBtn:textColor="#000"
        fnBtn:capsText="true"
        fnBtn:btnStyle="fill"
        app:fillColor="#148925"
        fnBtn:progressColor="@android:color/holo_blue_dark"
        fnBtn:hideFillAfterCollapse="true"/>


    <com.ekalips.fancybuttonproj.FancyButton
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="60dp"
        android:id="@+id/btn3"
        fnBtn:text="Button"
        fnBtn:textColor="#000"
        fnBtn:capsText="true"
        fnBtn:btnStyle="stroke"
        fnBtn:fillColor="@android:color/holo_green_light"
        fnBtn:strokeColor="@android:color/holo_green_light"
        fnBtn:progressColor="@android:color/holo_green_light"
        fnBtn:strokeWidth="10"
        fnBtn:hideFillAfterCollapse="true"/>




</LinearLayout>
